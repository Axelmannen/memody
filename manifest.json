{
  "manifest_version": 3,
  "name": "Lyrics Player",
  "version": "1.0",
  "description": "A synchronized lyrics player extension",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "https://api.mistral.ai/*",
    "https://api.music.ai/*",
    "https://storage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": [
      "AI Music-audio.mp3",
      "lyrics.json",
      "image.png",
      "index.html",
      "styles.css",
      "script.js"
    ],
    "matches": ["<all_urls>"]
  }]
}